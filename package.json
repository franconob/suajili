{
  "name": "AI Agent Multiplatform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "web-client",
    "shared/build/dist/js/developmentLibrary"
  ],
  "scripts": {
    "dev": "concurrently -n shared,web-client -c auto \"pnpm:watch:shared\" \"pnpm:dev:web\"",
    "dev:web": "pnpm --dir web-client dev",
    "watch:shared": "./gradlew :shared:jsBrowserDevelopmentLibraryDistribution --continuous --no-daemon"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
